{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": [
        "prisma/**",
        "node_modules/.prisma/**"
      ]
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-summary",
      "schedule": "0 3 * * *"
    }
  ]
}
